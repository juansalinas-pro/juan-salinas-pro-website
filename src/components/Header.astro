---
import { Menu, X } from 'lucide-astro'

const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Sobre m√≠', href: '/about' },
  { name: 'Blog', href: 'https://blog.juansalinas.pro/' },
];
---

<header class="bg-white dark:bg-gray-900 shadow-md sticky top-0 left-0 right-0 z-10 transition-colors duration-300">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex w-full items-center justify-between py-6">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 transition-colors duration-300">
          Juan Salinas
        </a>
        <div class="ml-10 hidden space-x-8 lg:block">
          {navigation.map((link) => (
            <a
              href={link.href}
              class="text-base font-medium text-gray-700 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 transition-colors duration-300"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
      <div class="ml-10 flex items-center">
        <button
          type="button"
          class="lg:hidden p-2 text-gray-500 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 transition-colors duration-300"
          id="menu-button"
        >
          <span class="sr-only">Open menu</span>
          <Menu class="h-6 w-6" aria-hidden="true" id="menu-icon" />
          <X class="h-6 w-6 hidden" aria-hidden="true" id="close-icon" />
        </button>
      </div>
    </div>
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="space-y-1 pb-3 pt-2">
        {navigation.map((link) => (
          <a
            href={link.href}
            class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-indigo-600 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-indigo-400 transition-colors duration-300"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.getElementById('menu-button');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && menuIcon && closeIcon && mobileMenu) {
      menuButton.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
    }
  });
</script>